	<nav>
		<div class="logo-div">
			<a href="/"><img class="logo" src="/logo.png"></a>
			<a href="/"><img class="logo-small" src="/logo-black.png"></a>
			<a href="/"><img class="logo-text" src="/logo-text.png"></a>
		</div>

		<button class="mobile-nav-toggle" aria-controls="primary-navigation" aria-expanded="false"><span class="sr-only">Menu</span></button>

		<ul id="primary-navigation" data-visible="false" class="primary-navigation">
			<li>
				<a href="/blog">AKTUALNOŚCI</a>
			</li>
			<li> 
				<a href="/kampania">KAMPANIA</a>
			</li>
			<li> 
				<a href="/popierają-nas">POPIERAJĄ NAS</a>
			</li>
			<li> 
				<a href="/kontakt">KONTAKT</a>
			</li>
		</ul>

		<div class="button-div mail">
			<a class="button" href="mailto:zakazkolcow@poczta.fm">Napisz do nas</a>
		</div>
	</nav>
</header>

<style>
	body {
		overflow-x: hidden;
	}
	header {
		padding: 0 20px;
		background-color: var(--white);
	}
	nav {
		height: 80px;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	ul {
		list-style: none;
	}

	.primary-navigation {
		display: flex;
		gap: 40px;
		padding: 0;
		font-size: 1.6rem;
	}
	.primary-navigation a {
		font-family: 'Inter';
		font-size: 1.6rem;
	}
	.primary-navigation a.active {
		color: #141414;
		text-decoration: none;
	}

	.logo-div, .button-div {
		flex-grow: 1;
		flex-basis: 0;
	}
	.logo-div {
		display: flex;
		align-items: center;
	}
	.logo {
		width: 58px;
		display: flex;
	}
	.logo-text {
		width: 136px;
		border-radius: 0;
		padding: 20px;
	}
	.logo-small {
		display: none;
	}

	.button-div {
		text-align: right;
	}
	.button {
		display: inline-block;
		margin: 0;
	}

	.mobile-nav-toggle {
		display: none;
	}

	.primary-navigation.prevent-transition{
  	transition: none;
}

	@media  (max-width: 1100px) {
		.logo-div, .button-div {
			flex-grow: 0;
			flex-basis: auto;
	}
		.logo {
			display: none;
		}
		.logo-text {
			display: none;
		}
		.logo-small {
			display: flex;
			width: 56px;
		}
	}

	@media  (max-width: 900px) {
		.primary-navigation {
			position: fixed;
			z-index: 1000;
			inset: 0 0 0 30%;

			flex-direction: column;
			margin-top: 0;
			margin-bottom: 0;
			padding: min(15vh, 20rem) 2em;

			transform: translateX(100%);
			transition: transform 350ms ease-in;

			background-color: var(--darker-gray);
		}
		.primary-navigation[data-visible="true"] {
			transform: translateX(0%);
		}
		.mobile-nav-toggle {
			display: block;
			position: absolute;
			z-index: 9999;

			width: 32px;
			aspect-ratio: 1; /*width and height are the same*/
			top: 2rem;
			right: 2rem;
			border: none;
			background: url(/public/hamburger.svg);
		}
		.primary-navigation a {
			color: var(--white);
		}
		.mail {
			position: absolute;
			left: 50%;
			transform: translateX(-50%);
		}

	}
	@media  (max-width: 400px) {
		.mail {
			display: none;
		} 
	}
</style>

<script>
	const primaryNav = document.querySelector('.primary-navigation')
	const navToggle = document.querySelector('.mobile-nav-toggle')

	navToggle.addEventListener('click', () => {
		const visibility = primaryNav.getAttribute('data-visible')
		
		if (visibility === "false") {
			primaryNav.setAttribute('data-visible', true)
			navToggle.setAttribute('aria-expanded', true)
		}
		else if (visibility === "true") {
			primaryNav.setAttribute('data-visible', false)
			navToggle.setAttribute('aria-expanded', false)
		}
	})

	window.addEventListener("resize", ()=> {
  primaryNav.classList.add("prevent-transition");
  setTimeout(()=>{
    primaryNav.classList.remove("prevent-transition");
  },500)
})
</script>
