</div>
    <div>
        <form name="contact" method="POST" data-netlify="true">
            <p>
            <label>Imię (i nazwisko): <input type="text" name="name" /></label>
            </p>
            <p>
            <label>E-mail: <input type="email" name="email" /></label>
            </p>
            <p>
            <label>Wiadomość: <textarea name="message"></textarea></label>
            </p>
            <p>
            <button type="submit">Wyślij</button>
            </p>
        </form> 
    </div>

</Layout>
<style>
    .us {
        display: flex;
        padding: 20px 0;
        gap: 10px;
    }
    .our-photos {
        width: 400px;
    }
    form {
        padding: 20px;
        /* box-shadow: 0 2px 8px rgba(var(--black), 5%); */
        border-radius: 8px;
        margin: 0 auto;
        background: gray;
    }
    textarea {
        width: 100%;
        height: 200px;
        border-radius: 5px;
        border: none;
    }
    input {
        width: 100%;
        height: 50px;
        border-radius: 5px;
        border: none;
    }
    button {
        padding: 15px 30px;
        /* width: 100%; */
        border: none;
        border-radius: 5px;
    }
    label {
        display: block;
        text-align: left;
    }
